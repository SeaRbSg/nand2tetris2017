/**
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    And(a=sel, b=b, out=b-out);
    Not(in=sel, out=not-sel);
    And(a=a, b=not-sel, out=a-out);
    Or(a=a-out, b=b-out, out=out);
}
