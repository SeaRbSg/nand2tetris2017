/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Add16(a=in,
          b[0]=true,
          b[1]=false,
          b[2]=false,
          b[3]=false,
          b[4]=false,
          b[5]=false,
          b[6]=false,
          b[7]=false,
          b[8]=false,
          b[9]=false,
          b[10]=false,
          b[11]=false,
          b[12]=false,
          b[13]=false,
          b[14]=false,
          b[15]=false,
          out=out);
}
